<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diplim20" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#966BD3</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#966BD3</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="theme">
        <item name="android:windowTitleBackgroundStyle">@style/themeTitleBackground</item>
        <item name="android:windowTitleSize">65dip</item>

    </style>

    <style name="themeTitleBackground">
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">#966BD3</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    </style>
</resources>